############################################################
# EGroupware Chatbot MCP - Example Environment Configuration
# Copy this file to `.env` and adjust values for your setup.###########################################################

############################
# Security / Auth
############################
# Generate a strong secret key, e.g.:
#   openssl rand -hex 32
JWT_SECRET_KEY="replace_with_strong_secret"

############################
# Internal Service URLs
############################
# URL the agent service uses to reach the tool server (inside Docker network)
TOOL_SERVER_URL="http://tool-server:8001"

############################
# EGroupware (fallback) Configuration
############################
# Optional: If users do not supply an URL during login, the tool server will
# fall back to this base URL. Usually leave blank to force explicit user input.
# Example: https://egroupware.example.com/egroupware
EGROUPWARE_BASE_URL=""

############################
# Provider API Keys (Supply the one matching selected provider)
############################
# OpenAI key (if using provider_type=openai)
OPENAI_API_KEY=""
# IONOS key (if using provider_type=ionos)
IONOS_API_KEY=""
# GitHub Models token (if using provider_type=github); if set overrides provided key
GITHUB_TOKEN=""
# OpenRouter key (if using provider_type=openrouter)
OPENROUTER_API_KEY=""
# Anthropic key (if using provider_type=anthropic)
ANTHROPIC_API_KEY=""
# Azure OpenAI key (if using provider_type=azure)
AZURE_OPENAI_API_KEY=""

############################
# Provider Base URLs (only when required)
############################
# IONOS base URL example: https://api.ionos.ai/openai
IONOS_BASE_URL=""
# GitHub models inference endpoint override (rarely needed)
GITHUB_MODELS_BASE_URL="https://models.github.ai/inference"
# OpenRouter base URL (default shown)
OPENROUTER_BASE_URL="https://openrouter.ai/api/v1"
# Azure OpenAI endpoint (e.g., https://my-instance.openai.azure.com)
AZURE_OPENAI_ENDPOINT=""

############################
